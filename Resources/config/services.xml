<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="neutron_customer_services.plugin.builder.class">Neutron\Plugin\CustomerServicesBundle\CustomerServicesPlugin</parameter>
        <parameter key="neutron_customer_services.doctrine.plugin_manager.default.class">Neutron\Plugin\CustomerServicesBundle\Doctrine\CustomerServicesPluginManager</parameter>
        <parameter key="neutron_customer_services.controller.backend.administration.default.class">Neutron\Plugin\CustomerServicesBundle\Controller\Backend\AdministrationController</parameter>
        <parameter key="neutron_customer_services.controller.backend.plugin.default.class">Neutron\Plugin\CustomerServicesBundle\Controller\Backend\CustomerServicesPluginController</parameter>
        <parameter key="neutron_customer_services.controller.frontend.plugin.default.class">Neutron\Plugin\CustomerServicesBundle\Controller\Frontend\CustomerServicesPluginController</parameter>
        <parameter key="neutron_customer_services.form.type.customer_services_plugin.class">Neutron\Plugin\CustomerServicesBundle\Form\Type\CustomerServicesPluginType</parameter>
        <parameter key="neutron_customer_services.form.type.customer_services_plugin.content.class">Neutron\Plugin\CustomerServicesBundle\Form\Type\CustomerServicesPlugin\ContentType</parameter>
        <parameter key="neutron_customer_services.form.handler.customer_services_plugin.default.class">Neutron\Plugin\CustomerServicesBundle\Form\Handler\CustomerServicesPluginHandler</parameter>
        <parameter key="neutron_customer_services.doctrine.customer_service_manager.default.class">Neutron\Plugin\CustomerServicesBundle\Doctrine\CustomerServiceManager</parameter>
        <parameter key="neutron_customer_services.controller.backend.administration.default.class">Neutron\Plugin\CustomerServicesBundle\Controller\Backend\AdministrationController</parameter>
        <parameter key="neutron_customer_services.controller.frontend.customer_service.default.class">Neutron\Plugin\CustomerServicesBundle\Controller\Frontend\CustomerServiceController</parameter>
        <parameter key="neutron_customer_services.datagrid.customer_service_management.class">Neutron\Plugin\CustomerServicesBundle\DataGrid\CustomerServiceManagement</parameter>
        <parameter key="neutron_customer_services.datagrid.customer_service_list.class">Neutron\Plugin\CustomerServicesBundle\DataGrid\CustomerServiceList</parameter>
        <parameter key="neutron_customer_services.form.type.customer_service.class">Neutron\Plugin\CustomerServicesBundle\Form\Type\CustomerServiceType</parameter>
        <parameter key="neutron_customer_services.form.type.customer_service.content.class">Neutron\Plugin\CustomerServicesBundle\Form\Type\CustomerService\ContentType</parameter>
        <parameter key="neutron_customer_services.form.handler.customer_service.default.class">Neutron\Plugin\CustomerServicesBundle\Form\Handler\CustomerServiceHandler</parameter>
        <parameter key="neutron_customer_services.event_listener.navigation.class">Neutron\Plugin\CustomerServicesBundle\EventListener\NavigationListener</parameter>
    </parameters>

    <services>
    
        <service id="neutron_customer_services.plugin.builder" 
        	class="%neutron_customer_services.plugin.builder.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="neutron_mvc.plugin.factory" />
            <argument type="service" id="router" />
            <argument type="service" id="translator" />
            <argument type="service" id="neutron_customer_services.plugin_manager" />
            <argument>%neutron_customer_services.translation_domain%</argument>
        </service>
        
        
        <service id="neutron_customer_services.plugin" 
        	class="Neutron\MvcBundle\Plugin\PluginFactory"
        	factory-service="neutron_customer_services.plugin.builder"
        	factory-method="build"
        >
            <tag name="neutron.plugin" alias="neutron.plugin.customer_services"/>
        </service>
    
        <service id="neutron_customer_services.doctrine.plugin_manager.default" 
        	class="%neutron_customer_services.doctrine.plugin_manager.default.class%" 
        	parent="neutron_mvc.doctrine.plugin_manager">
            <call method="setPluginInstanceClassName">
            	<argument>%neutron_customer_services.plugin_class%</argument>
            </call>
            <call method="setObjectManager">
            	<argument type="service" id="object_manager" />
            </call>
        </service>
         
        <service id="neutron_customer_services.controller.backend.plugin.default" 
        	class="%neutron_customer_services.controller.backend.plugin.default.class%"
        	parent="neutron_mvc.controller.backend.plugin_instance"
        	scope="request"
        >
            <call method="setForm">
            	<argument type="service" id="neutron_customer_services.form.customer_services_plugin" />
            </call>    
 			<call method="setFormHandler">
            	<argument type="service" id="neutron_customer_services.form.handler.customer_services_plugin" />
            </call> 		
 			<call method="setPlugin">
            	<argument type="service" id="neutron_customer_services.plugin" />
            </call>
        </service>
        
        <service id="neutron_customer_services.controller.frontend.plugin.default" 
        	class="%neutron_customer_services.controller.frontend.plugin.default.class%">
            <call method="setContainer">
            	<argument type="service" id="service_container"/>
            </call>
       </service>
        
        <service id="neutron_customer_services.controller.backend.administration.default" 
        	class="%neutron_customer_services.controller.backend.administration.default.class%">
            <call method="setContainer">
            	<argument type="service" id="service_container"/>
            </call>
       </service>
              
        <service id="neutron_customer_services.form.type.customer_services_plugin" 
        	class="%neutron_customer_services.form.type.customer_services_plugin.class%"
        	parent="neutron_mvc.form.type.plugin_instance"
        	scope="request"
        >
            <call method="setPlugin">
            	<argument type="service" id="neutron_customer_services.plugin" />
            </call>
            <call method="setInstanceType">
            	<argument>%neutron_customer_services.form.plugin_instance.type%</argument>
            </call>
            <call method="setGridName">
            	<argument>%neutron_customer_services.form.customer_service.grid%</argument>
            </call>
            <call method="setCustomerServicesPluginClass">
            	<argument>%neutron_customer_services.plugin_class%</argument>
            </call>
            <call method="setCustomerServiceClass">
            	<argument>%neutron_customer_services.item.class%</argument>
            </call>
            <call method="setReferenceClass">
            	<argument>%neutron_customer_services.item.reference_class%</argument>
            </call>
            <tag name="form.type" alias="neutron_customer_services_plugin" />
        </service>
        
        <service id="neutron_customer_services.form.type.customer_services_plugin.content" 
        	class="%neutron_customer_services.form.type.customer_services_plugin.content.class%"
        	scope="request"
        >
        	<argument>%neutron_customer_services.plugin_class%</argument>
			<argument>%neutron_customer_services.plugin_templates%</argument>
			<argument>%neutron_customer_services.translation_domain%</argument>
			
            <tag name="form.type" alias="neutron_customer_services_plugin_content" />
        </service>
        
        <service id="neutron_customer_services.form.handler.customer_services_plugin.default" 
        	class="%neutron_customer_services.form.handler.customer_services_plugin.default.class%"
        	parent="neutron_mvc.form.handler.plugin_instance"
        	scope="request"
        >
        	
        	<call method="setForm">
        		<argument type="service" id="neutron_customer_services.form.customer_services_plugin" />
        	</call>
        	<call method="setPlugin">
        		<argument type="service" id="neutron_customer_services.plugin" />
        	</call>
        	<call method="setTranslationDomain">
        		<argument>%neutron_customer_services.translation_domain%</argument>
        	</call>
        </service>
        
       	<service id="neutron_customer_services.form.customer_services_plugin" factory-method="createNamed" 
       		factory-service="form.factory" class="Symfony\Component\Form\Form"
       	>
            <argument>%neutron_customer_services.form.plugin.name%</argument>
            <argument>%neutron_customer_services.form.plugin.type%</argument>
        </service>
        
        <service id="neutron_customer_services.doctrine.customer_service_manager.default" 
        	class="%neutron_customer_services.doctrine.customer_service_manager.default.class%" 
        	parent="neutron_component.doctrine.manager"
        >
            <call method="setClassName">
            	<argument>%neutron_customer_services.item.class%</argument>
            </call>
            <call method="setObjectManager">
            	<argument type="service" id="object_manager" />
            </call>
        </service>
        
        <service id="neutron_customer_services.controller.backend.administration.default" 
        	class="%neutron_customer_services.controller.backend.administration.default.class%">
            <call method="setContainer">
            	<argument type="service" id="service_container"/>
            </call>
       </service>
       
        <service id="neutron_customer_services.controller.frontend.customer_service.default" 
        	class="%neutron_customer_services.controller.frontend.customer_service.default.class%">
            <call method="setContainer">
            	<argument type="service" id="service_container"/>
            </call>
       </service>
       
       <service id="neutron_customer_services.datagrid.customer_service_management" 
        	class="%neutron_customer_services.datagrid.customer_service_management.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="router" />
        	<argument type="service" id="neutron_customer_services.customer_service_manager" />
        	<argument>%neutron_customer_services.translation_domain%</argument>
        </service>
        
        <service id="neutron_customer_services.datagrid.builder.neutron_customer_service_management" 
        	class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
        	factory-service="neutron_customer_services.datagrid.customer_service_management"
        	factory-method="build"
        >
        	<tag name="neutron_data_grid.datagrid" alias="customer_service_management" />
        </service>
        
       <service id="neutron_customer_services.datagrid.customer_service_list" 
        	class="%neutron_customer_services.datagrid.customer_service_list.class%"
        	scope="request"
       	>
        	<argument type="service" id="neutron_data_grid.factory" />
        	<argument type="service" id="translator" />
        	<argument type="service" id="neutron_customer_services.customer_service_manager" />
        	<argument>%neutron_customer_services.translation_domain%</argument>
        </service>
        
        <service id="neutron_customer_services.datagrid.builder.neutron_customer_service_list" 
        	class="Neutron\Bundle\DataGridBundle\DataGrid\DataGrid"
        	factory-service="neutron_customer_services.datagrid.customer_service_list"
        	factory-method="build"
        >
        	<tag name="neutron_data_grid.datagrid" alias="customer_service_list" />
        </service>
        
        <service id="neutron_customer_services.form.type.customer_service" 
        	class="%neutron_customer_services.form.type.customer_service.class%"
        >
 			<argument type="service" id="neutron_customer_services.plugin" />
            <tag name="form.type" alias="neutron_customer_service" />
        </service>
        
        <service id="neutron_customer_services.form.type.customer_service.content" 
        	class="%neutron_customer_services.form.type.customer_service.content.class%"
        >
 			<argument>%neutron_customer_services.item.class%</argument>
 			<argument>%neutron_customer_services.item.templates%</argument>
 			<argument>%neutron_customer_services.translation_domain%</argument>

            <tag name="form.type" alias="neutron_customer_service_content" />
        </service>
        
        <service id="neutron_customer_services.form.customer_service" factory-method="createNamed" 
       		factory-service="form.factory" class="Symfony\Component\Form\Form"
       	>
            <argument>%neutron_customer_services.form.customer_service.name%</argument>
            <argument>%neutron_customer_services.form.customer_service.type%</argument>
        </service>
        
        <service id="neutron_customer_services.form.handler.customer_service.default" 
        	class="%neutron_customer_services.form.handler.customer_service.default.class%"
        	parent="neutron_component.form.handler"
        	scope="request"
        >
        	<call method="setForm">
        		<argument type="service" id="neutron_customer_services.form.customer_service" />
        	</call>
        	<call method="setObjectManager">
        		<argument type="service" id="object_manager" />
        	</call>
    
        	<call method="setTranslationDomain">
        		<argument>%neutron_customer_services.translation_domain%</argument>
        	</call>
        	<call method="setManager">
        		<argument type="service" id="neutron_customer_services.customer_service_manager" />
        	</call>
        	<call method="setPlugin">
        		<argument type="service" id="neutron_customer_services.plugin" />
        	</call>
        </service>
        
        <service id="neutron_customer_services.event_listener.navigation" 
        	class="%neutron_customer_services.event_listener.navigation.class%"
        	scope="request"
        >
        	<argument type="service" id="neutron_mvc.category.manager" />
        	<argument type="service" id="neutron_customer_services.plugin" />
        	<tag name="kernel.event_listener" event="neutron_admin.onMenuConfigure" method="onMenuConfigure"/> 
        </service>

    </services>
  
</container>
